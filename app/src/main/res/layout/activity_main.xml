<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.gerdaumanagement.gerdaumanagement.MainActivity">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="147dp"
        android:layout_height="123dp"
        android:layout_weight="1.10"
        app:srcCompat="@mipmap/logo" />

    <LinearLayout
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="1">


        <EditText
            android:id="@+id/usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gerdautitulo1"
            android:layout_centerHorizontal="true"
            android:layout_weight="1.13"
            android:background="@drawable/fundologin"
            android:cursorVisible="true"
            android:ems="9"
            android:fontFamily="sans-serif"
            android:hint="@string/usuario"
            android:inputType="textEmailAddress"
            android:paddingLeft="5dp"
            android:textColorHint="@color/quaseblack"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/senha"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_alignStart="@+id/usuario"
            android:layout_below="@+id/usuario"
            android:layout_marginTop="25dp"
            android:paddingLeft="5dp"
            android:background="@drawable/fundologin"
            android:ems="9"
            android:fontFamily="sans-serif"
            android:hint="@string/senha"
            android:inputType="textPassword"
            android:textColorHint="@color/quaseblack"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="20dp" />



        <Button
            android:id="@+id/logar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/senha"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="80dp"
            android:background="#3ab5f9"
            android:fontFamily="sans-serif-smallcaps"
            android:onClick="entrarSistema"
            android:text="@string/entrar"
            android:textColor="@color/white"
            android:textScaleX="1.3"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingTop="5dp"
            android:onClick="recuperarSenha"
            android:text="@string/recuperarSenha"
            android:textColor="@color/quaseblack"
            android:textSize="16sp" />

    </LinearLayout>


</LinearLayout>




