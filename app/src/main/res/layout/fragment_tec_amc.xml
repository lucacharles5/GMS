<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/home_search"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shadow_grey"
        android:drawablePadding="8dp"
        android:drawableRight="@android:drawable/ic_menu_search"
        android:hint="@string/buscarContratada"
        android:imeActionLabel="Search"
        android:imeOptions="actionSearch"
        android:inputType="textCapSentences"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:textColor="@android:color/darker_gray"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/home_search"
        android:layout_alignStart="@+id/home_search"
        android:layout_below="@+id/home_search">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.18"
            android:background="@drawable/shadow_grey"
            android:orientation="vertical">


            <TextView
                android:id="@+id/idMelhoravaliada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shadow_grey"
                android:fontFamily="sans-serif"
                android:text="Melhor Avaliada"
                android:textAlignment="center"
                android:textColor="@color/verde"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/mensal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:text="Mensal"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/notaMensal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="90%"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/semestral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="semestral"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/notaSemestral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="75%"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/trimestral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="trimestral"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/notaTrimestral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="80%"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="18sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0.5"
            android:background="@drawable/shadow_grey"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idPioravaliada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shadow_grey"
                android:text="Pior Avaliada"
                android:textAlignment="center"
                android:textColor="@color/vermelho"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/pMensal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:text="Mensal"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pnotaMensal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="55%"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/psemestral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="semestral"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pnotaSemestral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="65%"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/ptrimestral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="trimestral"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pnotaTrimestral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="75%"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>


    <lecho.lib.hellocharts.view.ColumnChartView
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linearLayout2"
        android:layout_margin="15dp"
        android:layout_above="@+id/button2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/gradiente_azul_semconor"
        android:text="Adicionar Amc"
        android:textColor="@color/cinza"
        android:onClick="adicionarAmc"/>

</RelativeLayout>